---
import Layout from "../../../layouts/Layout.astro";
import { AdminHeader } from "../../../components/AdminHeader.tsx";
import { CertificateTable } from "../../../components/CertificateTable.tsx";
import { Toaster } from "../../../components/ui/sonner";
---

<Layout title="Manage Certificates">
  <div class="min-h-screen bg-background">
    <AdminHeader client:load />
    <main class="container mx-auto p-4 md:p-6 lg:p-8">
      <div class="space-y-6">
        <div>
          <h1 class="text-3xl font-bold mb-2">Manage Certificates</h1>
          <p class="text-muted-foreground">View and manage all certificates in the system</p>
        </div>
        <CertificateTable client:load showUserColumn={true} allowGenerate={true} />
      </div>
    </main>
    <Toaster client:load />
  </div>
</Layout>

