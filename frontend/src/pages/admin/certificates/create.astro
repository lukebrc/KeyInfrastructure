---
import Layout from "../../../layouts/Layout.astro";
import { AdminHeader } from "../../../components/AdminHeader.tsx";
import { CreateCertificateForm } from "../../../components/CreateCertificateForm.tsx";
import { Toaster } from "../../../components/ui/sonner";
---

<Layout title="Create Certificate">
  <div class="min-h-screen bg-background">
    <AdminHeader client:load />
    <main class="container mx-auto p-4 md:p-6 lg:p-8 max-w-4xl">
      <div class="space-y-6">
        <div>
          <h1 class="text-3xl font-bold mb-2">Create Certificate</h1>
          <p class="text-muted-foreground">Create a new certificate for a user</p>
        </div>
        <CreateCertificateForm client:load />
      </div>
    </main>
    <Toaster client:load />
  </div>
</Layout>

