---
import Layout from "../layouts/Layout.astro";
import { ExpiringBanner } from "../components/ExpiringBanner.tsx";
import { CertificateTable } from "../components/CertificateTable.tsx";
import { UserHeader } from "../components/UserHeader.tsx";
import { Toaster } from "../components/ui/sonner";
---

<Layout title="Dashboard">
  <div class="min-h-screen bg-gradient-to-br from-sky-50 via-blue-50 to-indigo-50">
    <UserHeader client:load />
    <main class="container mx-auto p-4 md:p-6 lg:p-8">
      <div class="space-y-6">
        <div>
          <h1 class="text-3xl font-bold mb-2">Certificate Dashboard</h1>
          <p class="text-muted-foreground">Manage your certificates and keys</p>
        </div>
        <ExpiringBanner client:load />
        <CertificateTable client:load />
      </div>
    </main>
    <Toaster client:load />
  </div>
</Layout>
